@model WebAdvert.Web.Models.Accounts.LoginModel

@{
    ViewData["Title"] = "View";
}


<div class="row">
    <div class="col-md-4">
        <h4>Login using your email address and password</h4>
<h5>
    <a asp-controller="Accounts" asp-action="Signup">If you are not a member you can sign up here</a>
</h5>
        <hr/>


        <form method="post"  asp-action="Login" asp-controller="Accounts">
            <div asp-validation-summary="All" class="text-danger" ></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" value="romiljnsmile@gmail.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group"> 
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" value="123456"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    
                    <input asp-for="RememberMe"  />
                    @Html.DisplayName("Remember Me")
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

